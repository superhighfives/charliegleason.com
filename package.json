{
  "name": "charliegleason.com",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css && npm run generate:banner",
    "build": "npm run build:css && remix build",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev": "remix build && run-p dev:*",
    "generate:banner": "printf '%s\n\n%s\n' \"/* This file is auto-generated */\" \"$(cat app/styles/app.css)\" > app/styles/app.css",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "generate:images": "ts-node lib/generateImages.ts"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.4.3",
    "@remix-run/cloudflare-pages": "^1.4.3",
    "@remix-run/react": "^1.4.3",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "emoji-regex": "^10.1.0",
    "grapheme-splitter": "^1.0.4",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix-utils": "^3.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.10.0",
    "@remix-run/dev": "^1.4.3",
    "@remix-run/eslint-config": "^1.4.3",
    "@types/fontkit": "^1.8.0",
    "@types/lodash": "^4.14.182",
    "@types/node-emoji": "^1.8.1",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "canvas": "^2.9.1",
    "eslint": "^8.15.0",
    "fontkit": "^2.0.2",
    "node-emoji": "^1.11.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.13",
    "tailwindcss": "^3.0.24",
    "ts-node": "^10.8.1",
    "typescript": "^4.6.4",
    "wrangler": "beta"
  },
  "engines": {
    "node": ">=14"
  }
}
