{
  "name": "charliegleason.com",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css && npm run generate:banner",
    "build": "npm run build:css && remix build",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev": "remix build && run-p dev:*",
    "generate:banner": "printf '%s\n\n%s\n' \"/* This file is auto-generated */\" \"$(cat app/styles/app.css)\" > app/styles/app.css",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "generate:images": "ts-node lib/generateImages.ts"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.10.1",
    "@remix-run/cloudflare-pages": "^1.10.1",
    "@remix-run/react": "^1.10.1",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "emoji-regex": "^10.2.1",
    "grapheme-splitter": "^1.0.4",
    "lodash": "^4.17.21",
    "node-emoji": "^1.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^6.0.0",
    "svgo": "^3.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.18.0",
    "@remix-run/dev": "^1.10.1",
    "@remix-run/eslint-config": "^1.10.1",
    "@tailwindcss/forms": "^0.5.3",
    "@types/fontkit": "^2.0.1",
    "@types/imagemin": "^8.0.0",
    "@types/lodash": "^4.14.191",
    "@types/node-emoji": "^1.8.2",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/sharp": "^0.31.1",
    "@types/svgo": "^3.0.0",
    "autoprefixer": "^10.4.13",
    "canvas": "^2.11.0",
    "eslint": "^8.32.0",
    "fontkit": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "sharp": "^0.31.3",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "wrangler": "2.7.1"
  },
  "engines": {
    "node": ">=14"
  }
