<div
  class="grid sm:gap-10 grid-cols-1 sm:grid-cols-3 space-y-8 sm:space-y-0 grid-flow-row-dense"
>
  {
    blocks.map((block) => (
      <ul
        class:list={[
          "grid grid-cols-1 gap-3 text-xs text-neutral-800 dark:text-neutral-300 auto-rows-min items-start",
          block.wide &&
            "sm:col-span-2 sm:grid-cols-2 sm:row-span-2 max-sm:[&>li:nth-child(n+10)]:hidden",
        ]}
      >
        <h2 class="tracking-widest text-xs font-display uppercase text-yellow-700 dark:text-yellow-500 col-span-full">
          {block.title}
        </h2>
        {block.items?.map((item) => (
          <li class="grid grid-cols-[2.5rem_1fr] leading-4.5">
            {item.date && (
              <em class="not-italic font-mono text-neutral-600 dark:text-neutral-500">
                {item.date}
              </em>
            )}
            <span class={!item.date ? "col-span-2" : ""}>
              {item.title}
              {item.link && (
                <>
                  , <Link href={item.link.href}>{item.link.title}</Link>
                </>
              )}
            </span>
          </li>
        ))}
        {block.education?.map((edu) => (
          <div>
            <strong class="font-medium">{edu.title}</strong>
            {edu.postscript && (
              <>
                <br />
                {edu.postscript}
              </>
            )}
            {edu.school && (
              <>
                <br />
                {edu.school}, {edu.location}
              </>
            )}
            <br />
            <em class="not-italic font-mono text-neutral-600 dark:text-neutral-500">
              {edu.dates}
            </em>
          </div>
        ))}
      </ul>
    ))
  }
</div>
