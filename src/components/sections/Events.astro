<Grid class="grid-flow-row-dense">
  {blocks.map((block) => (
    <div class:list={['space-y-3', block.wide ? 'col-span-2' : 'col-span-1']}>
      <h3 class="font-display text-xs uppercase tracking-wider text-neutral-500 dark:text-neutral-400">
        {block.title}
      </h3>
      <ul class="space-y-2">
        {block.items?.map((item) => (
          <li class:list={['flex gap-2 text-sm', item.stack && 'flex-col gap-0']}>
            {item.date && (
              <span class="font-mono text-xs text-neutral-400 dark:text-neutral-500 w-10 flex-shrink-0">
                {item.date}
              </span>
            )}
            <span class="flex-1">
              {item.title}
              {item.link && (
                <>
                  {' '}
                  <a
                    href={item.link.href}
                    class="text-yellow-700 dark:text-yellow-500 hover:underline"
                  >
                    {item.link.title}
                  </a>
                </>
              )}
            </span>
          </li>
        ))}
        {block.education?.map((edu) => (
          <li class="space-y-1">
            <div class="font-medium">{edu.title}</div>
            <div class="text-sm text-neutral-600 dark:text-neutral-400">
              {edu.school}, {edu.location}
            </div>
            <div class="text-xs text-neutral-500">{edu.dates}</div>
            {edu.postscript && (
              <div class="text-xs text-yellow-700 dark:text-yellow-500">{edu.postscript}</div>
            )}
          </li>
        ))}
      </ul>
    </div>
  ))}
</Grid>
