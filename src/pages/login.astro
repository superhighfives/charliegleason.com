---
import { Effect } from "effect";
import Layout from "../layouts/Layout.astro";
import { login, safeRedirect } from "../lib/auth";

// If user is already logged in, redirect home
const user = Astro.locals.user;
if (user) {
  return Astro.redirect("/");
}

// Get redirect target from query params
const url = new URL(Astro.request.url);
const redirectTo = safeRedirect(url.searchParams.get("redirectTo"));
const errorParam = url.searchParams.get("error");

let error = "";

// Handle POST request (login attempt)
if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();
  const password = formData.get("password") as string;
  const formRedirectTo = safeRedirect(formData.get("redirectTo") as string);

  const env = Astro.locals.runtime?.env;

  if (!env) {
    error = "Server configuration error";
  } else {
    const result = await Effect.runPromise(
      login(env, password, formRedirectTo).pipe(
        Effect.catchAll((kvError) =>
          Effect.gen(function* () {
            yield* Effect.logError(`Login KV error: ${kvError._tag}`);
            return { _tag: "LoginFailure" as const, error: "Server error" };
          })
        )
      )
    );

    if (result._tag === "LoginSuccess") {
      return new Response(null, {
        status: 302,
        headers: {
          Location: result.redirectTo,
          ...result.headers,
        },
      });
    } else {
      error = result.error || "Invalid password";
    }
  }
}

// Show error from query param (e.g., from failed auth)
if (errorParam === "unauthorized") {
  error = "Incorrect password. Please try again.";
}
---

<Layout title="Login">
  <main class="login-container">
    <div class="login-box">
      <h1>This is a protected area</h1>

      <p class="description">
        To abide by Intellectual Property policies, this content is
        <strong>password protected</strong>.
      </p>

      <p class="contact">
        <a href="mailto:hi@charliegleason.com">Contact me</a> to get access.
      </p>

      <hr />

      <form method="POST">
        <input type="hidden" name="redirectTo" value={redirectTo} />

        <label for="password" class="sr-only">Password</label>

        <div class="input-group">
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Enter password..."
            autocomplete="current-password"
            required
          />
          <button type="submit" aria-label="Submit">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="arrow-icon"
            >
              <path
                fill-rule="evenodd"
                d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z"
                clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>

        {error && <p class="error">{error}</p>}
      </form>
    </div>
  </main>
</Layout>

<style>
  .login-container {
    display: grid;
    place-items: center;
    min-height: 100vh;
    padding: 1rem;
  }

  .login-box {
    max-width: 24rem;
    width: 100%;
  }

  h1 {
    font-family: monospace;
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  .description {
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 0.5rem;
  }

  .contact {
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 1.5rem;
  }

  .contact a {
    color: inherit;
    text-decoration: underline;
  }

  hr {
    border: none;
    border-top: 1px solid #e5e5e5;
    margin: 1.5rem 0;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .input-group {
    display: flex;
    border-radius: 0.375rem;
    box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  }

  input[type="password"] {
    flex: 1;
    padding: 0.5rem 0.75rem;
    border: 1px solid #d1d5db;
    border-right: none;
    border-radius: 0.375rem 0 0 0.375rem;
    font-size: 0.875rem;
    background: #f9fafb;
  }

  input[type="password"]:focus {
    outline: none;
    border-color: #eab308;
    box-shadow: 0 0 0 1px #eab308;
  }

  button[type="submit"] {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    border: 1px solid #eab308;
    border-radius: 0 0.375rem 0.375rem 0;
    background: #fef9c3;
    color: #a16207;
    cursor: pointer;
    transition: background 0.15s;
  }

  button[type="submit"]:hover {
    background: #fef08a;
  }

  .arrow-icon {
    width: 1rem;
    height: 1rem;
  }

  .error {
    font-size: 0.75rem;
    font-family: monospace;
    color: #a16207;
    margin-top: 0.5rem;
  }

  @media (prefers-color-scheme: dark) {
    .description,
    .contact {
      color: #a3a3a3;
    }

    hr {
      border-color: #404040;
    }

    input[type="password"] {
      background: #171717;
      border-color: #404040;
      color: #fff;
    }

    input[type="password"]:focus {
      border-color: #ca8a04;
      box-shadow: 0 0 0 1px #ca8a04;
    }

    button[type="submit"] {
      background: #171717;
      border-color: #854d0e;
      color: #facc15;
    }

    button[type="submit"]:hover {
      background: #854d0e;
    }

    .error {
      color: #facc15;
    }
  }
</style>
