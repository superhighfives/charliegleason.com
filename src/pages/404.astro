---
import Layout from '../layouts/Layout.astro';
import Container from '../components/ui/Container.astro';
import Link from '../components/ui/Link.astro';
---

<Layout title="404 - Page Not Found | Charlie Gleason">
  <Container>
    <div class="min-h-[60vh] flex flex-col justify-center items-center text-center space-y-8 py-20">
      <div class="space-y-4">
        <h1 class="text-8xl font-display text-yellow-500">404</h1>
        <h2 class="text-2xl font-display">Page Not Found</h2>
        <p class="text-neutral-600 dark:text-neutral-400 max-w-md">
          The page you're looking for doesn't exist or has been moved.
        </p>
      </div>
      <Link href="/" padding="large" class="inline-block">
        Back to Home
      </Link>
    </div>
  </Container>
</Layout>
